{
  "name": "playground-universal-react",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "run-p start:*",
    "start:css": "cross-env NODE_ENV=development postcss './src/styles/*.css' --dir './assets' -w",
    "start:client": "cross-env NODE_ENV=development webpack --watch --config tools/webpack/server/development",
    "build": "run-s build:*",
    "build:css": "cross-env NODE_ENV=production postcss './src/styles/*.css' --dir './assets' --no-map",
    "build:client": "cross-env NODE_ENV=production webpack --progress --config tools/webpack/client/production.js",
    "build:server": "cross-env NODE_ENV=production webpack --config tools/webpack/server/production",
    "server": "cross-env NODE_ENV=production node build/server.js",
    "clean": "run-p clean:*",
    "clean:dev": "rimraf .tmp",
    "clean:build": "rimraf build",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "safe-guard": "lint-staged",
    "lint": "run-p lint:*",
    "lint:style": "stylelint 'src/**/*.css'",
    "lint:script": "tslint -t stylish 'src/**/*.{ts,tsx}'",
    "fix": "run-p fix:*",
    "fix:style": "prettier --write 'src/**/*.css'",
    "fix:script": "tslint -t stylish --fix 'src/**/*.{ts,tsx}'",
    "fix:json": "prettier --write 'src/**/*.json'",
    "typecheck": "tsc --noEmit -p tools/tsconfig/server.production.json",
    "ts-node": "ts-node"
  },
  "browserslist": [
    "> 0.5% in jp",
    "not ios < 10.3",
    "not android < 5",
    "not safari < 10.1",
    "not chrome 49",
    "not dead"
  ],
  "lint-staged": {
    "subTaskConcurrency": 1,
    "linters": {
      "*.{ts,tsx}": [
        "tslint --fix",
        "git add"
      ],
      "*.css": [
        "prettier --write",
        "stylelint",
        "git add"
      ],
      "*.json": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s typecheck safe-guard"
    }
  },
  "dependencies": {
    "connected-react-router": "^4.5.0",
    "date-fns": "^1.29.0",
    "dotenv": "^6.0.0",
    "ejs": "^2.6.1",
    "express": "^4.16.3",
    "history": "^4.7.2",
    "lodash-es": "^4.17.11",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-helmet-async": "^0.2.0",
    "react-router": "^4.4.0-beta.1",
    "react-router-config": "^4.4.0-beta.1",
    "react-router-dom": "^4.4.0-beta.1",
    "rxjs": "^6.3.3",
    "sanitize.css": "^8.0.0",
    "tslib": "^1.9.3",
    "webpack": "^4.20.2",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-hot-middleware": "^2.24.2"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/dotenv-webpack": "^1.5.0",
    "@types/ejs": "^2.6.0",
    "@types/express": "^4.16.0",
    "@types/fs-extra": "^5.0.4",
    "@types/history": "^4.7.0",
    "@types/lodash-es": "^4.17.1",
    "@types/react": "^16.4.15",
    "@types/react-dom": "^16.0.8",
    "@types/react-helmet": "^5.0.7",
    "@types/react-helmet-async": "^0.0.1",
    "@types/react-redux": "^6.0.9",
    "@types/react-router": "^4.0.32",
    "@types/react-router-config": "^1.0.9",
    "@types/react-router-dom": "^4.3.1",
    "@types/redux-logger": "^3.0.6",
    "@types/webpack": "^4.4.14",
    "@types/webpack-dev-middleware": "^2.0.2",
    "@types/webpack-env": "^1.13.6",
    "@types/webpack-hot-middleware": "^2.16.4",
    "@types/webpack-node-externals": "^1.6.3",
    "autoprefixer": "^9.1.5",
    "browser-sync": "^2.26.0",
    "browser-sync-webpack-plugin": "^2.2.2",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "cssnano": "^4.1.4",
    "dotenv-webpack": "^1.5.7",
    "fork-ts-checker-webpack-plugin": "^0.4.10",
    "fs-extra": "^7.0.0",
    "husky": "^1.1.1",
    "license-info-webpack-plugin": "^1.0.2",
    "lint-staged": "^7.3.0",
    "nodemon-webpack-plugin": "^3.0.1",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.0",
    "postcss-color-hex-alpha": "^5.0.2",
    "postcss-custom-media": "^7.0.4",
    "postcss-custom-properties": "^8.0.8",
    "postcss-fixes": "^2.0.1",
    "postcss-import": "^12.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-nested": "^4.1.0",
    "postcss-url": "^8.0.0",
    "prettier": "^1.14.3",
    "raw-loader": "^0.5.1",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "source-map-loader": "^0.2.4",
    "source-map-support": "^0.5.9",
    "style-loader": "^0.23.0",
    "stylelint": "^9.6.0",
    "stylelint-config-standard": "^18.2.0",
    "ts-loader": "^5.2.1",
    "ts-node": "^7.0.1",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^2.0.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.1",
    "typescript-fsa": "^3.0.0-beta-2",
    "typescript-fsa-reducers": "^1.0.0",
    "webpack-cli": "^3.1.2",
    "webpack-node-externals": "^1.7.2"
  }
}
